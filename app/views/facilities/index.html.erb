<div>
  <div>
    <h1>
      List of all facilities
    </h1>
  </div>
</div>



<%= search_form_for @q do |f| %>
  <p>Narrow results:</p>

  <div>
    <%= f.label :name_cont, "Title containing" %>
    <%= f.text_field :name_cont, :placeholder => "Enter a few characters" %>
  </div>



  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/facilities">Clear filters</a>
<% end %>



<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>ID</th>

        <th>Name</th>

        <th>City</th>

        <th>Website</th>

        <th>Owner</th>

        <th>Operator</th>

        <th>Capacity</th>

        <th></th>
      </tr>


      <% @list_of_facilities.each do |a_facility| %>
        <form id="updating_the_facility" action="/quick_modify_facility/<%= a_facility.id %>"  method="post">
        <tr>
          <td><%= a_facility.id %></td>

          <td><input type="text" id="name_box" name="query_name" value="<%= a_facility.name %>"></td>
          <td><input type="text" id="name_box" name="query_city" value="<%= a_facility.city %>"></td>
          <td><input type="text" id="name_box" name="query_website" value="<%= a_facility.website %>"></td>
          <td><input type="text" id="name_box" name="query_owner" value="<%= a_facility.owner %>"></td>
          <td><input type="text" id="name_box" name="query_operator" value="<%= a_facility.operator %>"></td>
          <td><input type="text" id="name_box" name="query_capacity" value="<%= a_facility.capacity %>"></td>
          
          <td><button id="updating_the_facility">Update Terminal</button></td>

          </form>

 
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
