<div>
  <div>
    <h1>
      List of all facilities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new facility
    </h2>

    <form action="/insert_facility" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="phone_box">
          Phone
        </label>

        <input type="text" id="phone_box" name="query_phone">
      </div>

      <div>
        <label for="term_type_box">
          Term type
        </label>

        <input type="text" id="term_type_box" name="query_term_type">
      </div>

      <div>
        <input type="checkbox" id="status_box" name="query_status" value="1">

        <label for="status_box">Status</label>
      </div>

      <div>
        <label for="county_box">
          County
        </label>

        <input type="text" id="county_box" name="query_county">
      </div>

      <div>
        <label for="latitude_box">
          Latitude
        </label>

        <input type="text" id="latitude_box" name="query_latitude">
      </div>

      <div>
        <label for="longitude_box">
          Longitude
        </label>

        <input type="text" id="longitude_box" name="query_longitude">
      </div>

      <div>
        <label for="source_box">
          Source
        </label>

        <input type="text" id="source_box" name="query_source">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

      <div>
        <label for="owner_box">
          Owner
        </label>

        <input type="text" id="owner_box" name="query_owner">
      </div>

      <div>
        <label for="operator_box">
          Operator
        </label>

        <input type="text" id="operator_box" name="query_operator">
      </div>

      <div>
        <label for="commodity_box">
          Commodity
        </label>

        <input type="text" id="commodity_box" name="query_commodity">
      </div>

      <div>
        <label for="capacity_box">
          Capacity
        </label>

        <input type="text" id="capacity_box" name="query_capacity">
      </div>

      <div>
        <input type="checkbox" id="truck_in_box" name="query_truck_in" value="1">

        <label for="truck_in_box">Truck in</label>
      </div>

      <div>
        <input type="checkbox" id="truck_out_box" name="query_truck_out" value="1">

        <label for="truck_out_box">Truck out</label>
      </div>

      <div>
        <input type="checkbox" id="pipe_in_box" name="query_pipe_in" value="1">

        <label for="pipe_in_box">Pipe in</label>
      </div>

      <div>
        <input type="checkbox" id="pipe_out_box" name="query_pipe_out" value="1">

        <label for="pipe_out_box">Pipe out</label>
      </div>

      <div>
        <input type="checkbox" id="marine_in_box" name="query_marine_in" value="1">

        <label for="marine_in_box">Marine in</label>
      </div>

      <div>
        <input type="checkbox" id="marine_out_box" name="query_marine_out" value="1">

        <label for="marine_out_box">Marine out</label>
      </div>

      <div>
        <input type="checkbox" id="rail_in_box" name="query_rail_in" value="1">

        <label for="rail_in_box">Rail in</label>
      </div>

      <div>
        <input type="checkbox" id="rail_out_box" name="query_rail_out" value="1">

        <label for="rail_out_box">Rail out</label>
      </div>

      <div>
        <label for="parsel_box">
          Parsel
        </label>

        <input type="text" id="parsel_box" name="query_parsel">
      </div>

      <div>
        <label for="city_box">
          City
        </label>

        <input type="text" id="city_box" name="query_city">
      </div>

      <div>
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state">
      </div>

      <div>
        <label for="zip_box">
          Zip
        </label>

        <input type="text" id="zip_box" name="query_zip">
      </div>

      <div>
        <label for="zip4_box">
          Zip4
        </label>

        <input type="text" id="zip4_box" name="query_zip4">
      </div>

      <div>
        <label for="tanks_count_box">
          Tanks count
        </label>

        <input type="text" id="tanks_count_box" name="query_tanks_count">
      </div>

      <button>
        Create facility
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Phone
        </th>

        <th>
          Term type
        </th>

        <th>
          Status
        </th>

        <th>
          County
        </th>

        <th>
          Latitude
        </th>

        <th>
