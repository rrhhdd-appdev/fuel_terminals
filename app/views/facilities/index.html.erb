        </td>

        <td>
          <%= a_facility.website %>
        </td>

        <td>
          <%= a_facility.owner %>
        </td>

        <td>
          <%= a_facility.operator %>
        </td>

        <td>
          <%= a_facility.commodity %>
        </td>

        <td>
          <%= a_facility.capacity %>
        </td>

        <td>
          <%= a_facility.truck_in %>
        </td>

        <td>
          <%= a_facility.truck_out %>
        </td>

        <td>
          <%= a_facility.pipe_in %>
        </td>

        <td>
          <%= a_facility.pipe_out %>
        </td>

        <td>
          <%= a_facility.marine_in %>
        </td>

        <td>
          <%= a_facility.marine_out %>
        </td>

        <td>
          <%= a_facility.rail_in %>
        </td>

        <td>
          <%= a_facility.rail_out %>
        </td>

        <td>
          <%= a_facility.parsel %>
        </td>

        <td>
          <%= a_facility.city %>
        </td>

        <td>
          <%= a_facility.state %>
        </td>

        <td>
          <%= a_facility.zip %>
        </td>

        <td>
          <%= a_facility.zip4 %>
        </td>

        <td>
          <%= a_facility.tanks_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_facility.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_facility.updated_at) %> ago
        </td>

        <td>
          <a href="/facilities/<%= a_facility.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
