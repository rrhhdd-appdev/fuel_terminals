<div>
  <div>
    <h1>
      List of all companies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new company
    </h2>

    <form action="/insert_company" method="post">
      <div>
        <label for="company_name_box">
          Company name
        </label>

        <input type="text" id="company_name_box" name="query_company_name">
      </div>

      <div>
        <label for="users_count_box">
          Users count
        </label>

        <input type="text" id="users_count_box" name="query_users_count">
      </div>

      <button>
        Create company
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company name
        </th>

        <th>
          Users count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_companies.each do |a_company| %>
      <tr>
        <td>
          <%= a_company.id %>
        </td>

        <td>
          <%= a_company.company_name %>
        </td>

        <td>
          <%= a_company.users_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_company.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_company.updated_at) %> ago
        </td>

        <td>
          <a href="/companies/<%= a_company.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
