<div>
  <div>
    <h1>
      Fuel #<%= @the_fuel.id %> details
    </h1>

    <div>
      <div>
        <a href="/fuels">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_fuel/<%= @the_fuel.id %>">
          Delete fuel
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_fuel.name %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @the_fuel.category %>
      </dd>

      <dt>
        Tanks count
      </dt>
      <dd>
        <%= @the_fuel.tanks_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fuel.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fuel.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit fuel
    </h2>

    <form action="/modify_fuel/<%= @the_fuel.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_fuel.name %>">
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category" value="<%= @the_fuel.category %>">
      </div>

      <div>
        <label for="tanks_count_box">
          Tanks count
        </label>

        <input type="text" id="tanks_count_box" name="query_tanks_count" value="<%= @the_fuel.tanks_count %>">
      </div>

      <button>
        Update fuel
      </button>
    </form>
  </div>
</div>

<hr>
